{
  "title": "swap symbols",
  "rules": [
    {
      "description": "swap curly brackets {} with dollar percent $%",
      "//description": "this one must take precedence over the number/symbol swap, meant to work with it",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "4",
              "modifiers": [
                "shift"
              ]
            }
          ],
          "conditions": [
            {
              "input_sources": [
                {
                  "language": "en"
                }
              ],
              "type": "input_source_if"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "5",
              "modifiers": [
                "shift"
              ]
            }
          ],
          "conditions": [
            {
              "input_sources": [
                {
                  "language": "en"
                }
              ],
              "type": "input_source_if"
            }
          ]
        },
        {
          "type": "basic",
