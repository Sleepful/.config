Host *
  StrictHostKeyChecking no
  AddKeysToAgent yes
  UseKeychain yes
  IdentityFile ~/.ssh/id_ed25519

# GitLab.com
Host gitlab.com
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/id_ed25519gl

# proxmox (builder)
Match host builder exec "nc -z -w1 -G1 192.168.100.127 22" 
  # uses LAN connection if it can connect, otherwise `Host builder` is set with tailscale HostName
  HostName 192.168.100.127

Host nix
  # over LAN
  StrictHostkeyChecking no
  Port 22
  User root
  HostName 192.168.100.127

# proxmox nixos builder through tailscale
Host builder tsbuilder
  StrictHostkeyChecking no
  Port 22
  # User nixos
  User root
  HostName nixos-builder


# hetzn
Host nix0
  Port 22
  User root
  HostName 46.224.56.107
